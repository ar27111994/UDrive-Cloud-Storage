@model WebApplication5.Models.Package
<div class="content-wrapper">
    <div class="row">
      
        <div style="margin:50px;" class="col-md-7">


            @using (Html.BeginForm("PackageEdit", "Admin", new { area = "Admin" }))
            {
                @Html.AntiForgeryToken()

